      </ImageView>
      <MenuBar layoutY="-1.0" prefHeight="30.0" prefWidth="449.0">
        <menus>
          <Menu fx:id="settingsMenu" mnemonicParsing="false" text="Settings">
            <items>
              <MenuItem fx:id="paramConfig" mnemonicParsing="false" onAction="#switchToSettings" text="Configure the Unowns" />
                  <MenuItem fx:id="modelDisplay" mnemonicParsing="false" onAction="#switchToModelDisplay" text="View Models" />
            </items>
          </Menu>
          <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="howToPlay" mnemonicParsing="false" onAction="#displayHelp" text="How to play ?" />
            </items>
          </Menu>
          <Menu fx:id="aboutMenu" mnemonicParsing="false" text="About">
            <items>
              <MenuItem fx:id="whoAreWe" mnemonicParsing="false" onAction="#displayAbout" text="Who are we ?" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ImageView fx:id="playerIcon" fitHeight="75.0" fitWidth="75.0" layoutX="197.0" layoutY="146.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/unown_o.png" />
         </image>
      </ImageView>
      <Label layoutX="167.0" layoutY="95.0" text="Player">
         <font>
            <Font name="System Bold" size="45.0" />
         </font>
      </Label>
      <Label layoutX="167.0" layoutY="221.0" text="Wins !">
         <font>
            <Font name="System Bold" size="45.0" />
         </font>
      </Label>
      <Button layoutX="44.0" layoutY="304.0" mnemonicParsing="false" onAction="#switchMainMenu" prefHeight="45.0" prefWidth="137.0" style="-fx-background-color: #5c4bda;" text="Main menu" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button layoutX="284.0" layoutY="304.0" mnemonicParsing="false" onAction="#replay" prefHeight="45.0" prefWidth="105.0" style="-fx-background-color: #5c4bda;" text="Replay" textFill="WHITE">
         <font>
            <Font size="21.0" />
         </font>
      </Button>
   </children>
