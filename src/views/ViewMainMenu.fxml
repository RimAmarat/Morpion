<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="475.0" maxWidth="449.0" minHeight="400.0" minWidth="449.0" prefHeight="428.0" prefWidth="449.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ControllerMainMenu">
   <children>
      <ImageView fitHeight="400.0" fitWidth="450.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resources/images/assets/unown_battle.png" />
         </image>
      </ImageView>
      <MenuBar layoutY="-1.0" prefHeight="30.0" prefWidth="449.0">
        <menus>
          <Menu fx:id="settingsMenu" mnemonicParsing="false" text="Settings">
            <items>
              <MenuItem fx:id="paramConfig" mnemonicParsing="false" onAction="#switchToSettings" text="Configure the Unowns" />
                  <MenuItem fx:id="modelDisplay" mnemonicParsing="false" onAction="#switchToModelDisplay" text="View Models" />
            </items>
          </Menu>
          <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="howToPlay" mnemonicParsing="false" onAction="#displayHelp" text="How to play ?" />
            </items>
          </Menu>
          <Menu fx:id="aboutMenu" mnemonicParsing="false" text="About">
            <items>
              <MenuItem fx:id="whoAreWe" mnemonicParsing="false" onAction="#displayAbout" text="Who are we ?" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Text layoutX="80.0" layoutY="240.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose your opponent">
         <font>
            <Font name="Noto Sans CJK KR Bold" size="26.0" />
         </font></Text>
      <Button layoutX="47.0" layoutY="277.0" mnemonicParsing="false" onAction="#switchToGame" prefHeight="51.0" prefWidth="145.0" style="-fx-background-color: #5c4bda;" text="Player" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font></Button>
      <Button layoutX="260.0" layoutY="277.0" mnemonicParsing="false" onAction="#switchToAIDifficultyChoice" prefHeight="51.0" prefWidth="145.0" style="-fx-background-color: #5c4bda;" text="Computer" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font></Button>
   </children>
</AnchorPane>
